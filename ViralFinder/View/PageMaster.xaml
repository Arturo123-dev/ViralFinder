<?xml version="1.0" encoding="utf-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ViralFinder.View.PageMaster" xmlns:pages="clr-namespace:ViralFinder.View" Title="PageMaster">
    <MasterDetailPage.Master>

        <ContentPage Title="MENU">
            <ContentPage.Content>
                <StackLayout BackgroundColor="#829fbc">
                    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

                        <Button x:Name="impostazioni"
                                Text="IMPOSTAZIONI"
                                BackgroundColor="#6d6d6d"
                                Clicked="impostazioni_Clicked"
                                TextColor="White"
                                AbsoluteLayout.LayoutBounds="0.5, 0.2"
                                AbsoluteLayout.LayoutFlags="PositionProportional"
                                WidthRequest="130"
                                />
                        <Button x:Name="Home"
                                Text="HOME"
                                BackgroundColor="#6d6d6d"
                                Clicked="Home_Clicked"
                                TextColor="White"
                                AbsoluteLayout.LayoutBounds="0.5, 0.3"
                                AbsoluteLayout.LayoutFlags="PositionProportional"
                                WidthRequest="130"
                                />

                        <Button x:Name="ricercheSalvate"
                                Text="# SALVATI"
                                BackgroundColor="#6d6d6d"
                                TextColor="White"
                                
                                AbsoluteLayout.LayoutBounds="0.5, 0.4"
                                AbsoluteLayout.LayoutFlags="PositionProportional"
                                WidthRequest="130"
                                />


                    </AbsoluteLayout>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>

    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>

        <ContentPage>

            <ContentPage.Content>
                <StackLayout BackgroundColor="#3f729b">

                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">


                        <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.2"
                                     AbsoluteLayout.LayoutFlags="PositionProportional"
                                     BackgroundColor="#008080"
                                     HeightRequest="100"
                                     WidthRequest="300"
                                     Spacing="22"
                                     >

                            <Entry x:Name="Hashtag"
                                   BackgroundColor="White"
                                   Text="{Binding Hashtag}"
                                   Placeholder="#hashtag"
                                   HorizontalOptions="Center"
                                   WidthRequest="200"
                                   
                                   />

                            <Button x:Name="Search"
                                    Text="CERCA"
                                    TextColor="White"
                                    BackgroundColor="#6d6d6d"
                                    Command="{Binding SearchCommand}"
                                    
                                    />


                        </StackLayout>

                    </AbsoluteLayout>
                    

                </StackLayout>

            </ContentPage.Content>
             
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
